<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/theme_item_image_layout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/banner_shadow">

        <ImageView
            android:id="@+id/theme_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/theme_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/theme_item_image_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/theme_item_editor_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_widget_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/index_item_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_widget_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/theme_editor"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_14" />

        <com.monosky.zhihudaily.view.roundedImageView.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/index_item_editor_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_common_divide"
            android:scaleType="fitXY"
            app:riv_oval="true" />

        <com.monosky.zhihudaily.view.roundedImageView.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/index_item_editor_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_common_divide"
            android:scaleType="fitXY"
            app:riv_oval="true" />

        <com.monosky.zhihudaily.view.roundedImageView.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/index_item_editor_3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_common_divide"
            android:scaleType="fitXY"
            app:riv_oval="true" />

        <com.monosky.zhihudaily.view.roundedImageView.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/index_item_editor_4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_common_divide"
            android:scaleType="fitXY"
            app:riv_oval="true" />

        <com.monosky.zhihudaily.view.roundedImageView.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/index_item_editor_5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_common_divide"
            android:scaleType="fitXY"
            app:riv_oval="true" />
    </LinearLayout>

</LinearLayout>
